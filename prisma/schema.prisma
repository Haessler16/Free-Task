// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  read
  edit
  admin
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  password  String? //TO-DO NO OPTIONAL
  createdAt DateTime @default(now())
  role      Role     @default(admin)
  notes     Notes[]
  task      Task[]
  folders   Folder[]
}

model Folder {
  id     Int     @id @default(autoincrement())
  title  String
  notes  Notes[]
  user   User?   @relation(fields: [userId], references: [id])
  userId Int?
}

model Notes {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  characters  Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  folder      Folder?  @relation(fields: [folderId], references: [id])
  folderId    Int?
}

model Task {
  id        Int       @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  subtask   SubTask[]
  user      User?     @relation(fields: [userId], references: [id])
  userId    Int?
}

model SubTask {
  id     Int    @id @default(autoincrement())
  title  String
  task   Task?  @relation(fields: [taskId], references: [id])
  taskId Int?
}
